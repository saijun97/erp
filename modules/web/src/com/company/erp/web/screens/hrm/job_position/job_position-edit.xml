<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.erp.web.screens.hrm.job_position">
    <data>
        <instance id="job_PositionDc"
                  class="com.company.erp.entity.hrm.job_positions.Job_Position"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="job_PositionDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
                <textArea id="responsibilitiesField" property="responsibilities" rows="5"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowCommit"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
