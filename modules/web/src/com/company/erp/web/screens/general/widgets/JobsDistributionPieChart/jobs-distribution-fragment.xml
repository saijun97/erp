<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
          xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <data>
        <keyValueCollection id="JobsDistributionDc">
            <loader id="JobsDistributionPieChartLoader">
                <query>
                    <![CDATA[SELECT count(e), e.jobPosition
                             FROM erp_Employee e
                             GROUP BY e.jobPosition]]>
                </query>
            </loader>
            <properties>
                <property name="count"/>
                <property name="jobPosition"/>
            </properties>
        </keyValueCollection>
    </data>
    <layout>
        <chart:pieChart dataContainer="JobsDistributionDc"
                        creditsPosition="BOTTOM_LEFT"
                        theme="LIGHT"
                        angle="30"
                        balloonText="[[title]]&lt;br&gt;&lt;span style='font-size:14px'&gt;
                        &lt;strong&gt;[[value]]&lt;/strong&gt; ([[percents]]%)&lt;/span&gt;"
                        depth3D="15"
                        height="100%"
                        radius="75"
                        outlineAlpha="0.4"
                        titleField="jobPosition"
                        valueField="count"
                        width="100%">
            <chart:titles>
                <chart:title alpha="1"
                             bold="true"
                             color="DARKSLATEGREY"
                             size="20"
                             tabIndex="0"
                             text="Jobs Distribution"/>
                <chart:title alpha="0.5"
                             color="DARKBLUE"
                             size="12"
                             text="Within Organisation"/>
            </chart:titles>
            <chart:legend autoMargins="true"
                          marginRight="30"
                          markerType="CIRCLE"
                          position="BOTTOM"
                          equalWidths="false"/>
            <chart:export/>
        </chart:pieChart>
    </layout>
</fragment>
