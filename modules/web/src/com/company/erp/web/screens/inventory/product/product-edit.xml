<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.erp.web.screens.inventory.product">
    <data>
        <instance id="productDc"
                  class="com.company.erp.entity.inventory.Product"
                  view="product-view-details">
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="productDc">
            <column width="250px">
                <textField id="itemField" property="item"/>
                <textArea id="descriptionField" property="description" rows="5"/>
                <currencyField id="costField" property="cost" datatype="decimal" currency="MUR" />
                <currencyField id="priceField" property="price" datatype="decimal" currency="MUR"/>
                <textField id="qtyStore1Field" property="qtyStore1" datatype="int" />
                <textField id="qtyStore2Field" property="qtyStore2" datatype="int"/>
                <textField id="qtyStore3Field" property="qtyStore3" datatype="int"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowCommit"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
