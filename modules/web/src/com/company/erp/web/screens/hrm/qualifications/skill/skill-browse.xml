<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="skillsTable"
        messagesPack="com.company.erp.web.screens.hrm.qualifications.skill">
    <data readOnly="true">
        <collection id="skillsDc"
                    class="com.company.erp.entity.hrm.qualifications.skill.Skill"
                    view="_local">
            <loader id="skillsDl">
                <query>
                    <![CDATA[select e from erp_Skill e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="skillsTable"
            spacing="true">
        <filter id="filter"
                applyTo="skillsTable"
                dataLoader="skillsDl"
                defaultMode="fts"
                applyImmediately="false">
            <properties  include=".*"
                         excludeProperties="version,createTs,createdBy,updateTs,updatedBy,deleteTs,deletedBy"
                         excludeRecursively="true"
                         exclude="(id)"/>
        </filter>
        <groupTable id="skillsTable"
                    width="100%"
                    dataContainer="skillsDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="description"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="skillsTable.create"/>
                <button id="editBtn" action="skillsTable.edit"/>
                <button id="removeBtn" action="skillsTable.remove"/>
                <button id="excelBtn" action="skillsTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
