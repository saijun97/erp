<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.erp.web.screens.sales_inventory.order">
    <data>
        <instance id="orderDc"
                  class="com.company.erp.entity.sales_inventory.order.Order"
                  view="order-view-details">
            <loader id="orderDl"/>
            <collection id="itemDc" property="item"/>
            <collection id="documentDc" property="document"/>
        </instance>
        <collection id="clientsDc" class="com.company.erp.entity.crm.client.superclasses.Client" view="_minimal">
            <loader id="clientsLc">
                <query>
                    <![CDATA[select e from erp_Client e]]>
                </query>
            </loader>
        </collection>
        <collection id="logDc"
                    class="com.haulmont.cuba.security.entity.EntityLogItem"
                    view="logView">
            <loader id="logDl">
                <query>
                    <![CDATA[select i from sec$EntityLog i where i.entityRef.entityId = :order
                    order by i.eventTs desc]]>
                </query>
            </loader>
            <collection id="logAttrDc"
                        property="attributes"/>
        </collection>
    </data>
    <dialogMode modal="true"
                forceDialog="true"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true" margin="true,true,true,true">
            <tabSheet id="tabSheet">
                <tab id="details" caption="Details" spacing="true" margin="true,true,true,true">
                    <form id="form" dataContainer="orderDc">
                        <column width="250px">
                            <textField id="orderNumField" property="orderNum"/>
                            <lookupPickerField id="clientField" optionsContainer="clientsDc" property="client">
                                <actions>
                                    <action id="lookup" type="picker_lookup"/>
                                    <action id="open" type="picker_open"/>
                                    <action id="clear" type="picker_clear"/>
                                </actions>
                            </lookupPickerField>
                            <dateField id="orderDateField" property="orderDate"/>
                            <dateField id="deliveryDateField" property="deliveryDate"/>
                            <textField id="totalAmountField" property="totalAmount"/>
                        </column>
                    </form>
                    <groupBox id="itemBox" caption="msg://com.company.erp.entity.sales_inventory.order/Order.item">
                        <table id="itemTable"
                               dataContainer="itemDc"
                               width="100%"
                               height="200px"
                               multiLineCells="true"
                               aggregatable="true">
                            <actions>
                                <action id="create" type="create"/>
                                <action id="edit" type="edit"/>
                                <action id="remove" type="remove"/>
                            </actions>
                            <columns>
                                <column id="item"/>
                                <column id="unitVatPrice"/>
                                <column id="quantity"/>
                            </columns>
                            <buttonsPanel>
                                <button action="itemTable.create"/>
                                <button action="itemTable.edit"/>
                                <button action="itemTable.remove"/>
                            </buttonsPanel>
                        </table>
                    </groupBox>
                </tab>
                <tab id="documentsTab"
                     caption="Documents"
                     margin="true"
                     spacing="true">
                    <form id="form2" dataContainer="orderDc">
                    </form>
                    <groupBox id="documentBox"
                              caption="msg://com.company.erp.entity.sales_inventory.order/Order.document">
                        <table id="documentTable" dataContainer="documentDc" width="100%" height="200px">
                            <actions>
                                <action id="create" type="create"/>
                                <action id="edit" type="edit"/>
                                <action id="remove" type="remove"/>
                            </actions>
                            <columns>
                                <column id="name"/>
                            </columns>
                            <buttonsPanel>
                                <button action="documentTable.create"/>
                                <button action="documentTable.edit"/>
                                <button action="documentTable.remove"/>
                            </buttonsPanel>
                        </table>
                    </groupBox>
                </tab>
                <tab id="historyTab"
                     caption="Order History"
                     margin="true,true,true,true"
                     spacing="true">
                    <vbox height="100%"
                          width="100%" spacing="true">
                        <label value="Transactions" align="MIDDLE_CENTER"/>
                        <table id="logTable"
                               height="160px"
                               width="100%"
                               dataContainer="logDc"
                               multiLineCells="true">
                            <columns>
                                <column id="eventTs"/>
                                <column id="user"/>
                                <column id="type"/>
                            </columns>
                            <rows/>
                        </table>
                        <label value=""/>
                        <label value="Change Details" align="MIDDLE_CENTER"/>
                        <table id="logAttrTable"
                               height="92px"
                               width="100%"
                               dataContainer="logAttrDc"
                               multiLineCells="true">
                            <columns>
                                <column id="displayName" caption="Attribute"/>
                                <column id="oldValue"/>
                                <column id="value"/>
                            </columns>
                            <rows/>
                        </table>
                    </vbox>
                </tab>
            </tabSheet>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowCommit"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
