<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
        <collection id="ordersDc"
                    class="com.company.erp.entity.sales_inventory.order.Order"
                    view="order-view-details">
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e
                             from erp_Order e
                             where e.status IN ('UNPAID', 'PARTIALLY_PAID')
                             order by e.orderNum DESC]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout expand="vBox">
        <vbox id="vBox"
              expand="ordersTable"
              spacing="true">
            <label value="Unpaid &amp; Partially Paid Orders"
                   align="MIDDLE_CENTER"
                   stylename="bold"/>
            <groupTable id="ordersTable"
                        width="100%"
                        dataContainer="ordersDc"
                        responsive="true"
                        multiLineCells="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
\            </actions>
            <columns>
                <column id="orderNum" sortable="false"/>
                <column id="client" sortable="false"/>
                <column id="orderDate" sortable="false"/>
                <column id="totalAmount" sortable="false"/>
            </columns>
            </groupTable>
        </vbox>
    </layout>
</fragment>
