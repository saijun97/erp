<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="tabSheet"
        messagesPack="com.company.erp.web.screens.hrm.employee">
    <data>
        <instance id="employeeDc"
                  class="com.company.erp.entity.hrm.Employee"
                  view="employee-view-details">
            <loader/>
        </instance>
        <collection id="departmentsDc" class="com.company.erp.entity.hrm.dept.Department" view="_minimal">
            <loader id="departmentsLc">
                <query>
                    <![CDATA[select e from erp_Department e]]>
                </query>
            </loader>
        </collection>
        <collection id="subunitsDc" class="com.company.erp.entity.hrm.dept.Subunit" view="_minimal">
            <loader>
                <query>
                    <![CDATA[select e from erp_Subunit e where e.department = :container_departmentsDc]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode
            forceDialog="true" width="auto" height="auto"/>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" width="100%">
            expand="tabSheet">
            <tabSheet id="tabSheet" width="100%">
                <tab id="tab1" caption="General" margin="true" spacing="true">
                    <form id="generalDetails" dataContainer="employeeDc" align="TOP_LEFT">
                        <column width="250px">
                            <textField id="empIdField" property="empId" caption="Employee ID" caseConversion="UPPER"/>
                            <textField id="nicField" property="nic" caption="NIC"/>
                            <textField id="firstNameField" property="firstName" caption="First Name"/>
                            <textField id="middleNameField" property="middleName" caption="Middle Name"/>
                            <textField id="lastNameField" property="lastName" caption="Last Name"/>
                            <lookupField id="genderField" property="gender" caption="Gender"/>
                            <dateField id="dobField" property="dob" caption="Date Of Birth"/>
                        </column>
                    </form>
                </tab>
                <tab id="tab2" caption="Contact" margin="true" spacing="true">
                    <form id="contactDetails" dataContainer="employeeDc" align="TOP_LEFT">
                    <column width="250px">
                            <textField id="mobilePhoneField" property="mobilePhone" caption="Mobile Phone"
                                       align="TOP_LEFT"/>
                            <textField id="homePhoneField" property="homePhone" caption="Home Phone"
                                       align="TOP_LEFT"/>
                            <textField id="emailField" property="email" caption="E-Mail" align="TOP_LEFT"/>
                    </column>
                    </form>
                </tab>

                <tab id="tab3" caption="Job" margin="true" spacing="true">
                    <form id="jobDetails" dataContainer="employeeDc" align="TOP_LEFT">
                    <column width="250px">
                            <lookupPickerField optionsContainer="departmentsDc" property="department"
                                               id="departmentField"
                                               caption="Department" align="TOP_LEFT">
                                <actions>
                                    <action id="lookup" type="picker_lookup"/>
                                    <action id="clear" type="picker_clear"/>
                                </actions>
                            </lookupPickerField>
                            <lookupField id="subunitField" property="subunit" optionsContainer="subunitsDc"
                                         caption="Subunit"/>
                    </column>
                    </form>
                </tab>

                <tab id="tab4" caption="Qualifications" margin="true" spacing="true">
                    <form id="qualificationDetails" dataContainer="employeeDc" align="TOP_LEFT">
                    </form>
                </tab>
            </tabSheet>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowCommit"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
