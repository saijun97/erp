<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.erp.web.screens.hrm.employee">
    <data>
        <instance id="employeeDc"
                  class="com.company.erp.entity.hrm.Employee"
                  view="employee-view-details">
            <loader/>
        </instance>
        <collection id="departmentsDc" class="com.company.erp.entity.hrm.dept.Department" view="_minimal">
            <loader id="departmentsLc">
                <query>
                    <![CDATA[select e from erp_Department e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode modal="true"
                forceDialog="true" width="auto" height="auto"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" width="100%">
            <tabSheet id="tabSheet" width="100%" responsive="true" align="MIDDLE_CENTER">
                <tab caption="Personal Details" id="personaldetails" spacing="true" margin="true,false,false,false">
                    <form id="form" dataContainer="employeeDc">
                        <column width="250px">
                            <textField id="empIdField" property="empId" caption="Employee ID" caseConversion="UPPER"/>
                            <textField id="nicField" property="nic" caption="NIC"/>
                            <textField id="firstNameField" property="firstName" caption="First Name"/>
                            <textField id="middleNameField" property="middleName" caption="Middle Name"/>
                            <textField id="lastNameField" property="lastName" caption="Last Name"/>
                            <lookupField id="genderField" property="gender" caption="Gender"/>
                            <dateField id="dobField" property="dob" caption="Date Of Birth"/>
                        </column>
                    </form>
                </tab>
                <tab caption="Contact Details" margin="true,false,false,false" spacing="true" id="contactdetails">
                    <form id="form_2">
                        <column id="column_1">
                            <textField id="mobilePhoneField" property="mobilePhone" caption="Mobile Phone"/>
                            <textField id="homePhoneField" property="homePhone" caption="Home Phone"/>
                            <textField id="emailField" property="email" caption="E-Mail"/>
                        </column>
                    </form>
                </tab>
                <tab caption="Department" margin="true,false,false,false" spacing="true" id="department">
                    <form id="form_1">
                        <column id="column">
                            <lookupPickerField optionsContainer="departmentsDc" property="department" id="departmentField"
                                               caption="Department">
                                <actions>
                                    <action id="lookup" type="picker_lookup"/>
                                    <action id="clear" type="picker_clear"/>
                                </actions>
                            </lookupPickerField>
                            <lookupField property="subunit" id="subunitField" caption="Subunit">
                            </lookupField>
                        </column>
                    </form>
                </tab>
            </tabSheet>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowCommit"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
