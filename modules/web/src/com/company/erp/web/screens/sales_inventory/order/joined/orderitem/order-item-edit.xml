<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.erp.web.screens.sales_inventory.order.joined.orderitem">
    <data>
        <instance id="orderItemDc"
                  class="com.company.erp.entity.sales_inventory.order.joined.order_item.OrderItem"
                  view="orderItem-view-details">
            <loader/>
        </instance>
        <collection id="itemsDc" class="com.company.erp.entity.general.superclasses.Item" view="_minimal">
            <loader id="itemsLc">
                <query>
                    <![CDATA[select e from erp_Item e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="orderItemDc">
            <column width="250px">
                <lookupField id="itemField" optionsContainer="itemsDc" property="item"/>
                <textArea rows="5" id="descriptionField" property="description"/>
                <currencyField id="unitVatPriceField" property="unitVatPrice" currency="MUR"/>
                <currencyField id="quantityField" property="quantity" currency="MUR"/>
                <currencyField id="amountField" property="amount" currency="MUR"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowCommit"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
