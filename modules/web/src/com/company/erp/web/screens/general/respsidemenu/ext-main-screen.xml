<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        messagesPack="com.company.erp.web"
        caption="mainMsg://application.caption">
    <layout expand="horizontalWrap"
            stylename="c-sidemenu-responsive"
            responsive="true"
            height="100%">
        <hbox id="horizontalWrap"
              expand="workArea"
              stylename="c-sidemenu-layout"
              width="100%">
            <cssLayout id="sideMenuPanel"
                       height="100%"
                       stylename="c-sidemenu-panel">
                <button id="mobileMenuButton"
                        caption="mainMsg://app.menu"
                        icon="icons/mobile-menu.png"
                        stylename="primary c-sidemenu-toggle"/>
                <hbox id="mobileButtonsBox"
                      stylename="c-sidemenu-mobile-buttons">
                    <newWindowButton id="mobileNewWindowButton"
                                     description="mainMsg://newWindowBtnDescription"
                                     icon="app/images/new-window.png"/>
                    <userActionsButton id="mobileLogoutButton"/>
                </hbox>
                <hbox id="appTitleBox"
                      spacing="true"
                      stylename="c-sidemenu-title"
                      width="100%">
                    <label id="appTitleLabel"
                           value="mainMsg://application.logoLabel"/>
                </hbox>
                <cssLayout id="sideMenuWrap"
                           stylename="c-sidemenu-wrap">
                    <image id="logoImage"
                           stylename="c-app-icon"
                           align="MIDDLE_CENTER"
                           scaleMode="SCALE_DOWN"/>
                    <userIndicator id="userIndicator"
                                   width="100%"/>
                    <hbox id="mainButtonsBox"
                          stylename="c-main-buttons">
                        <newWindowButton id="newWindowButton"
                                         description="mainMsg://newWindowBtnDescription"
                                         icon="app/images/new-window.png"/>
                        <userActionsButton id="logoutButton"/>
                    </hbox>
                    <timeZoneIndicator id="timeZoneIndicator"
                                       width="100%"/>
                    <vbox id="mainVisualBox" margin="true">
                        <ftsField id="ftsField"
                                  width="100%"/>
                    </vbox>
                    <hbox spacing="true"/>
                    <sideMenu id="sideMenu"
                              sidePanel="sideMenuPanel"
                              sidePanelToggleButton="mobileMenuButton"/>
                </cssLayout>
            </cssLayout>
            <workArea id="workArea"
                      height="100%">
                <initialLayout margin="true"
                               spacing="true">
                    <vbox expand="content2"
                          height="250px"
                          align="MIDDLE_CENTER"
                          stylename="well"
                          width="750px">
                        <hbox stylename="v-panel-caption"
                              width="100%">
                            <label value="Quick Links" align="MIDDLE_CENTER"/>
                        </hbox>
                        <hbox id="content2"
                              spacing="true"
                              margin="true"
                              width="100%">
                          <vbox margin="true"
                                width="100%"
                                spacing="true"
                                align="MIDDLE_CENTER">
                            <button id="createTaskBtn"
                                    caption="Create Task"
                                    align="MIDDLE_CENTER"
                                    width="100%"
                                    stylename="primary"/>
                            <button id="createOrder"
                                    caption="Create Order"
                                    align="MIDDLE_CENTER"
                                    width="100%"
                                    stylename="primary"/>
                            <button id="createPayment"
                                    caption="Create Payment"
                                    align="MIDDLE_CENTER"
                                    width="100%"
                                    stylename="primary"/>
                            <button id="createServiceRequest"
                                    caption="Create Service Request"
                                    align="MIDDLE_CENTER"
                                    width="100%"
                                    stylename="primary"/>
                          </vbox>
                            <vbox margin="true"
                                  width="100%"
                                  spacing="true"
                                  align="MIDDLE_CENTER">
                                <button id="myProfile"
                                        icon="font-icon:USER_CIRCLE_O"
                                        caption="My Profile"
                                        align="MIDDLE_CENTER"
                                        width="100%"/>
                                <button id="mobileApp"
                                        icon="font-icon:MOBILE"
                                        caption="Download Mobile App"
                                        align="MIDDLE_CENTER"
                                        width="100%"/>
                                <link   id="mns"
                                        icon="font-icon:EXTERNAL_LINK"
                                        caption="Mauritius Network Services"
                                        align="MIDDLE_CENTER"
                                        width="100%"
                                        target="_blank"
                                        url="https://companies.govmu.org:4343/MNSOnlineSearch/"/>
                            </vbox>
                            <vbox margin="true"
                                  width="100%"
                                  spacing="true"
                                  align="MIDDLE_CENTER">
                                <button id="viewClients"
                                        caption="View Clients"
                                        align="MIDDLE_CENTER"
                                        width="100%"
                                        stylename="friendly"/>
                                <button id="viewEmployees"
                                        caption="View Employees"
                                        align="MIDDLE_CENTER"
                                        width="100%"
                                        stylename="friendly"/>
                                <button id="viewContactPersons"
                                        caption="View Contacts List"
                                        align="MIDDLE_CENTER"
                                        width="100%"
                                        stylename="friendly"/>
                                <button id="viewProducts"
                                        caption="View Products Catalog"
                                        align="MIDDLE_CENTER"
                                        width="100%"
                                        stylename="friendly"/>
                            </vbox>
                        </hbox>
                    </vbox>
                </initialLayout>
            </workArea>
        </hbox>
    </layout>
</window>